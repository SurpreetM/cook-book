<h1> Add a new recipe </h1>
<% if flash.has?(:message) %>
  <h2> <%= flash[:message] %> </h2>
<% end %>

<br>
<br>

  <form action="/recipes" method="post">
    <h3> Recipe Name: </h3>
    <textarea name="name" rows="2" cols="80" required ></textarea>

    <h3>Ingredients: </h3>
    <textarea name="ingredients" rows="10" cols="80" required></textarea>

    <h3> Instructions: </h3>
    <textarea name="instructions" rows="10" cols="80" required></textarea>

    <br>
    <br>

    <input type="submit" value="Save">
  </form>

<br>

  <form action="/recipes">
      <input type="submit" value=" < Back to all recipes">
  </form>
